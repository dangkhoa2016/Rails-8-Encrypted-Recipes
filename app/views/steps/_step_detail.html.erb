<div id="<%= dom_id step %>" class='card'>
  <div class="card-header">
  <strong>Id: </strong><%= step.id %>
  </div>
  <div class="card-body">
    <div class='row row-gap-3'>
      <div class='col-md-6'>
        <strong>Name: </strong><%= step.name %>
      </div>
      <div class='col-md-6'>
        <strong>Step number: </strong><%= step.step_number %>
      </div>
    </div>

    <p class="card-text mt-3"><strong>Description: </strong><%= step.description %></p>

    <hr />

    <p class="card-text"><strong>Recipe: </strong><strong><%= link_to step.recipe.name, step.recipe %></strong></p>
  </div>
  <div class='card-footer text-body-secondary'>
    <small>Created <%= time_ago_in_words(step.created_at) %> ago</small>
    <hr class="my-1" />
    <small>Updated <%= time_ago_in_words(step.updated_at) %> ago</small>
  </div>
  <div class='d-flex card-footer justify-content-between'>
    <%= link_to 'Show', step, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Edit', edit_step_path(step), class: 'btn btn-sm btn-secondary' %>
    <%= link_to 'Destroy', step, method: :delete, data: confirm_delete_attributes(step), class: 'btn btn-sm btn-danger' %>
  </div>
</div>
