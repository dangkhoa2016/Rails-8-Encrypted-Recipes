<div id="<%= dom_id step %>" class="list-group-item d-flex p-2 gap-3 d-flex justify-content-between">
  <div class='d-flex flex-column'>
    <div class='mb-2 align-items-center d-flex gap-2'>
      <h4 class="mb-0">
        <span class="badge bg-warning rounded-pill"><%= step.step_number %></span>
      </h4>
      <%= link_to step do %>
        <h6 class="mb-0"><%= step.name %></h6>
      <% end %>
    </div>

    <p class="mb-0 opacity-75 px-2"><%= step.description %></p>
  </div>
  <div class='d-flex flex-column'>
    <%= link_to edit_step_path(step), class: 'text-secondary' do %>
      <i class="bi bi-pencil-square"></i>
    <% end %>
    <%= link_to step, class: 'text-danger', data: { confirm: "Are you sure?", turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </div>
</div>
