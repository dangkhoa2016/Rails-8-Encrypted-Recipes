<div class="row justify-content-center w-100">
  <div class="col-md-8 col-lg-6 col-xl-5">
    <div class="card border-primary">
      <div class="card-header text-center text-bg-primary">
        <h2>Sign Up</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group mt-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
            <small class="form-text text-muted">
              <%= resource.class.human_attribute_name(:password_should_be_at_least_x_characters, { count: @minimum_password_length }) %>
            </small>
          </div>

          <div class="form-group mt-3">
            <%= form.label :password_confirmation, class: "form-label" %>
            <%= form.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="mt-3 text-center">
            <%= form.submit 'Sign Up', class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
