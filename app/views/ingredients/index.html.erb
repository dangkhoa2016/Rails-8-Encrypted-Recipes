<p style="color: green"><%= notice %></p>

<% content_for :title, "Ingredients" %>

<div class='mb-5'>
  <div class='d-flex justify-content-between align-items-center'>
    <h1>Ingredients</h1>
    <%= link_to "New ingredient", new_ingredient_path, class: 'btn btn-primary' %>
  </div>
  <div class='clearfix'></div>
</div>

<div id="ingredients" class='row row-cols-1 row-cols-md-2 row-cols-xxl-3 mb-3 gx-3 gy-5 justify-content-center'>
  <% @ingredients.each do |ingredient| %>
    <%= render ingredient %>
  <% end %>
</div>

<%= link_to "New ingredient", new_ingredient_path %>
