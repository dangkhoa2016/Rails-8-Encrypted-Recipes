<div id="<%= dom_id ingredient_recipe %>" class='card'>
  <div class="card-header">
    <strong>Id: </strong><%= ingredient_recipe.id %>
  </div>
  <div class="card-body">
    <div class='row row-gap-3'>
      <div class='col-md-6'>
        <strong>Ingredient: </strong>
        <strong>
          <% if ingredient_recipe.display_ingredient %>
            <%= link_to ingredient_recipe.display_ingredient.name, ingredient_recipe.display_ingredient %>
          <% else %>
            [No name]
          <% end %>
        </strong>
      </div>
      <div class='col-md-6'>
        <strong>Recipe: </strong>
        <strong>
          <% if ingredient_recipe.display_recipe %>
            <%= link_to ingredient_recipe.display_recipe.name, ingredient_recipe.display_recipe %>
          <% else %>
            [No name]
          <% end %>
        </strong>
      </div>
    </div>

    <hr class="my-3" />

    <div class='row row-gap-3'>
      <div class='col-md-6'>
        <p class="card-text"><strong>Amount: </strong><%= ingredient_recipe.display_amount %></p>
      </div>
      <div class='col-md-6'>
        <p class="card-text"><strong>Unit: </strong><%= ingredient_recipe.unit %></p>
      </div>
    </div>
  </div>
  <div class='card-footer text-body-secondary'>
    <small>Created <%= time_ago_in_words(ingredient_recipe.created_at) %> ago</small>
    <hr class="my-1" />
    <small>Updated <%= time_ago_in_words(ingredient_recipe.updated_at) %> ago</small>
  </div>
  <div class='d-flex card-footer justify-content-between'>
    <%= link_to 'Show', ingredient_recipe, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Edit', edit_ingredient_recipe_path(ingredient_recipe), class: 'btn btn-sm btn-secondary' %>
    <%= link_to 'Destroy', ingredient_recipe, method: :delete, data: confirm_delete_attributes(ingredient_recipe), class: 'btn btn-sm btn-danger' %>
  </div>
</div>
