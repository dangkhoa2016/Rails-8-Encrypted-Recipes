<% if ingredient_recipes.empty? %>
  <div class="list-group-item">
    <i class='bi bi-emoji-frown me-1'></i><i>No ingredient yet</i>
  </div>
<% else %>
  <% ingredient_recipes.each do |ingredient_recipe| %>
    <%= render ingredient_recipe, ingredient_recipe: ingredient_recipe %>
  <% end %>
<% end %>
