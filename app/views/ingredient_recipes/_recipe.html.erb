<div id="<%= dom_id recipe %>" class='col'>
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <%= link_to recipe.name, recipe, class: 'text-primary-emphasis fw-bold' %>
      <%= link_to add_ingredient_recipe_path(recipe, ingredient_recipes_page: true),
        data: { turbo_frame: 'modal_frame', modal_title: 'Add ingredient' },
        class: 'btn btn-primary btn-sm', title: 'Add ingredient' do %>
        <i class="bi bi-plus"></i>
      <% end %>
    </div>

    <div class="card-body">
      <% if recipe.summary.blank? %>
        <div class='d-flex align-items-center'>
          <i class='bi bi-emoji-frown me-1'></i><i>No summary yet</i>
        </div>
      <% else %>
        <%= recipe.summary %>
      <% end %>
    </div>

    <div id='recipe-<%= recipe.id %>-ingredients' class="list-group list-group-flush">
      <%= render 'ingredient_recipes/ingredient_list', ingredient_recipes: recipe.display_ingredient_recipes %>
    </div>

    <div class='card-footer'>
      <%= link_to add_ingredient_recipe_path(recipe, ingredient_recipes_page: true),
        data: { turbo_frame: 'modal_frame', modal_title: 'Add ingredient' },
        class: 'btn btn-primary btn-sm' do %>
        <i class="bi bi-plus"></i> Add ingredient
      <% end %>
    </div>
  </div>
</div>
