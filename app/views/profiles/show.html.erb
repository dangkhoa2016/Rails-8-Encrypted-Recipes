<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6 col-xl-5 mt-5">
    <div class="card">
      <div class="card-header text-center">
        <h2>Your Profile</h2>
      </div>
      <div class="card-body">
        <h5 class="mb-3">Welcome, <%= current_user.email %></h5>

        <div class="form-group">
          <%= label_tag :email, "Email", class: "form-label" %>
          <%= text_field_tag :email, current_user.email, class: "form-control", disabled: true %>
        </div>

        <div class="form-group mt-3">
          <%= label_tag :created_at, "Account Created On", class: "form-label" %>
          <%= text_field_tag :created_at, current_user.created_at.strftime("%B %d, %Y"), class: "form-control", disabled: true %>
        </div>

        <div class="form-group mt-3">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-warning" %>
        </div>

        <div class="mt-3 text-center">
          <%= link_to 'Logout', destroy_user_session_path, method: :delete,
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", turbo_method: :delete },
            class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
