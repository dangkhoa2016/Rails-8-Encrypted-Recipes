<%
display_recipes_count = category.display_recipes_count
border_color = case display_recipes_count
               when 0
                 'border-secondary'
               when 1..2
                 'border-info'
               when 3..4
                 'border-success'
               else
                 'border-warning'
               end
%>
<div id="<%= dom_id category %>" class='col'>
  <div class='card border-top-sm <%= border_color %>'>
    <div class='card-header py-2'>
      <%= link_to category.name, category, class: 'text-decoration-none fs-5' %>
    </div>
    <div class='card-body'>
      <p class='card-title'>
        <%= link_to recipes_path(category: category.id), class: '' do %>
          <strong>Number of recipes:</strong>
          <%= display_recipes_count %>
        <% end %>
      </p>

      <p class='card-text'><%= category.summary %></p>
    </div>
    <div class='card-footer text-body-secondary'>
      <small>Created <%= time_ago_in_words(category.created_at) %> ago</small>
      <hr class="my-1" />
      <small>Updated <%= time_ago_in_words(category.updated_at) %> ago</small>
    </div>
    <div class='d-flex card-footer justify-content-between'>
      <%= link_to 'Show', category, class: 'btn btn-sm btn-primary' if action_name != 'show' %>
      <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-secondary' %>
      <%= link_to 'Destroy', category, method: :delete, data: confirm_delete_attributes(category), class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
</div>
