<% if ingredient_recipes.empty? %>
  <li class='list-group-item list-group-item-secondary'>
    <i class='bi bi-emoji-frown me-1'></i><i>No ingredients yet</i>
  </li>
<% else %>
  <% ingredient_recipes.each do |ingredient_recipe| %>
    <li id="<%= dom_id ingredient_recipe %>" class='list-group-item list-group-item-secondary d-flex justify-content-between column-gap-2'>
      <div class='info'>
        <p class='mb-1'>
          <%= ingredient_recipe.display_ingredient&.name || '[No name]' %>
        </p>
        <span class='badge bg-secondary'>
          <%= ingredient_recipe.display_amount %> <%= ingredient_recipe.unit %>
        </span>
      </div>
      <div class='d-flex flex-column'>
        <%= link_to edit_ingredient_recipe_path(ingredient_recipe), class: 'text-secondary' do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= link_to ingredient_recipe, class: 'text-danger', data: confirm_delete_attributes(ingredient_recipe) do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </li>
  <% end %>
<% end %>
