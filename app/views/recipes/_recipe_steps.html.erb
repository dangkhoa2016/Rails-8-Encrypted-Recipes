<div class='card mb-3' role='alert'>
  <h6 class='card-header bg-info bg-opacity-50'>Steps</h6>
  <ul class='list-group list-group-flush bg-info bg-opacity-25'>
    <% if steps.empty? %>
      <li class='list-group-item bg-transparent'>
        <i class='bi bi-emoji-frown me-1'></i><i>No steps yet</i>
      </li>
    <% else %>
      <% steps.each do |step| %>
        <li class='list-group-item d-flex justify-content-between column-gap-2 bg-transparent'>
          <div class='info'>
            <strong class='mb-2 d-block'>
              <%= step.step_number %>. <%= step.name %>
            </strong>
            <%= step.description %>
          </div>
          <div class='d-flex flex-column'>
            <%= link_to edit_step_path(step), class: 'text-secondary' do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
            <%= link_to step, class: 'text-danger', data: confirm_delete_attributes(step) do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
