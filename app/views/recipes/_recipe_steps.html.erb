<div class='card mb-3' role='alert'>
  <div class='card-header bg-info bg-opacity-50 d-flex justify-content-between align-items-center'>
    <h6 class='mb-0'>Steps</h6>
    <%= link_to add_step_recipe_path(@recipe),
      data: { turbo_frame: 'modal_frame', modal_title: 'Add step' },
      class: 'btn btn-sm btn-warning' do %>
      <i class="bi bi-plus"></i>
    <% end %>
  </div>

  <ul id='recipe-<%= @recipe.id %>-steps' class='list-group list-group-flush bg-info bg-opacity-25'>
    <%= render 'recipes/step_list', steps: @recipe.steps %>
  </ul>

  <div class='card-footer bg-transparent'>
    <%= link_to add_step_recipe_path(@recipe),
      data: { turbo_frame: 'modal_frame', modal_title: 'Add step' },
      class: 'btn btn-warning' do %>
      <i class="bi bi-plus"></i> Add step
    <% end %>
  </div>
</div>
