<div class='mt-3 mb-0'>
  <div class='d-flex justify-content-between align-items-center mb-2'>
    <h6 class='mb-0'>Ingredients</h6>
    <%= link_to add_ingredient_recipe_path(@recipe),
      data: { turbo_frame: 'modal_frame', modal_title: 'Add ingredient' },
      class: 'btn btn-sm btn-primary' do %>
      <i class="bi bi-plus"></i>
    <% end %>
  </div>
  
  <ul id='recipe-<%= @recipe.id %>-ingredients' class='list-group'>
    <%= render 'recipes/ingredient_list', ingredient_recipes: @recipe.preload_ingredient_recipes %>
  </ul>

  <%= link_to add_ingredient_recipe_path(@recipe),
    data: { turbo_frame: 'modal_frame', modal_title: 'Add ingredient' },
    class: 'btn btn-primary mt-3' do %>
    <i class="bi bi-plus"></i> Add ingredient
  <% end %>
</div>
