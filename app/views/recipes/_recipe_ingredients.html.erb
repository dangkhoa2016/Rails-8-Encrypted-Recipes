<div class='mt-3 mb-0'>
  <h6>Ingredients</h6>
  <ul class='list-group'>
    <% if ingredient_recipes.empty? %>
      <li class='list-group-item list-group-item-secondary'>
        <i class='bi bi-emoji-frown me-1'></i><i>No ingredients yet</i>
      </li>
    <% else %>
      <% ingredient_recipes.each do |ingredient_recipe| %>
        <li class='list-group-item list-group-item-secondary d-flex justify-content-between column-gap-2'>
          <div class='info'>
            <p class='mb-1'>
              <%= ingredient_recipe.virtual_ingredient&.name || '[No name]' %>
            </p>
            <span class='badge bg-secondary'>
              <%= ingredient_recipe.display_amount %> <%= ingredient_recipe.unit %>
            </span>
          </div>
          <div class='d-flex flex-column'>
            <%= link_to edit_ingredient_recipe_path(ingredient_recipe), class: 'text-secondary' do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
            <%= link_to ingredient_recipe, class: 'text-danger', data: { confirm: "Are you sure?", turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
