<% if steps.empty? %>
  <li class='list-group-item bg-transparent'>
    <i class='bi bi-emoji-frown me-1'></i><i>No steps yet</i>
  </li>
<% else %>
  <% steps.each do |step| %>
    <li class='list-group-item d-flex justify-content-between column-gap-2 bg-transparent'>
      <div class='info'>
        <strong class='mb-2 d-block'>
          <%= step.step_number %>. <%= step.name %>
        </strong>
        <%= step.description.gsub(/\n/, '<br>').html_safe %>
      </div>
      <div class='d-flex flex-column'>
        <%= link_to edit_step_path(step), class: 'text-secondary' do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= link_to step, class: 'text-danger', data: { confirm: "Are you sure?", turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </li>
  <% end %>
<% end %>
